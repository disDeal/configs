{
	"diagnostic.joinMessageLines": true,
	"diagnostic.checkCurrentLine": true,
	"languageserver": {
		"haskell": {
			"command": "hie-wrapper",
			"args": [
				"--lsp"
			],
			"rootPatterns": [
				"stack.yaml",
				"cabal.config",
				"package.yaml"
			],
			"filetypes": [
				"hs",
				"lhs",
				"haskell"
			],
			"initializationOptions": {
				"languageServerHaskell": {
					"hlintOn": true
				}
			}
		},
		"fortran": {
			"command": "fortls",
			"filetypes": [
				"fortran"
			],
			"rootPatterns": [
				".fortls",
				".git/"
			]
		},
		"sql": {
			"command": "sql-language-server",
			"args": [
				"up",
				"--method",
				"stdio"
			],
			"filetypes": [
				"sql",
				"mysql"
			]
		},
		"nim": {
			"command": "nimlsp",
			"filetypes": [
				"nim"
			]
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		}
	}
}
